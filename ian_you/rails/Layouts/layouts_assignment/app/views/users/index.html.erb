<% content_for :all_users do %>

<div>
<h1>All Users</h1>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Favorite Language</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name  %></td>
            <td><%= user.last_name %></td>
            <td><%= user.favorite_language %></td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>

<% end %>

<% content_for :new_user do %>

    <% for message in flash[:message] %>
        <p> <%= message %> </p>
    <% end %>

<div>
<form action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="form_authenticity_token">
    <h1>New User</h1>
    <label>First Name</label>
    <p><input type="text" name="user[first_name]"></p>

    <label>Last Name</label>
    <p><input type="text" name="user[last_name]"></p>

    <label>Favorite Language</label>
    <p><input type="text" name="user[favorite_language]"></p>

    <p><input type="submit" value="Submit"></p>
    <p><a href="/posts/index"><button>All Posts</button></a></p>


</form>
</div>

<% end %>