<h1> <%= @dojo.branch %> </h1>

<h3> Address: <%= @dojo.street %> </h3>
<h3> City: <%= @dojo.city %> State: <%= @dojo.state %></h3>

<h3>Student Roster</h3>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
        <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
            <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a> &nbsp; 
            <a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit'>Edit</a> &nbsp; 
            <a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>' data-method="delete">Destroy</a> &nbsp;</td>
        </tr>
    <% end %>
    
    </tbody>
</table>



<p> <a href="/dojos">Home</a> &nbsp; <a href="/dojos/<%= @dojo.id %>/edit"> Edit</a> </p>

<p><a href="/dojos/<%= @dojo.id %>/students/new"> Add Student </a></p>