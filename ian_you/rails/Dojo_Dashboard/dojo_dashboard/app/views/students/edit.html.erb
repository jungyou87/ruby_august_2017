<h1>Editing <%= @student.first_name %>&nbsp;<%= @student.last_name%></h1>
<% for message in flash[:message] %>
    <p> <%= message %> </p>
<% end %>
<div>
    <form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="post">
        

        <div class="labels">
            <p><label>First Name: </label></p>
            <p><label>Last Name: </label></p>
            <p><label>Email Address: </label></p>
            <p><label>Dojo: </label></p>

        </div>

        <div class="inputs">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="hidden" name="_method" value="patch">
            <p><input type="text" name="student[first_name]" value="<%= @student.first_name %>"></p>
            <p><input type="text" name="student[last_name]" value="<%= @student.last_name %>"></p>
            <p><input type="email" name="student[email]" value="<%= @student.email %>"></p>
            <p><select name="student[dojo_id]">
            
                <% @dojos.each do |dojo| %>
                
                    <% if @student.dojo == dojo %>
                        <option selected value="<%= dojo.id %>" > <%= dojo.branch %> </option>
                    <% else %>
                        <option value="<%= dojo.id %>"><%=  dojo.branch %></option>
                    <% end %>
                <% end %>

                </select></p>
            <p><input type="submit" value="Update"></p>
        </div>
    </form>
</div>

<p> <a href="/dojos">Home</a> &nbsp; | &nbsp; <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>"><%= @student.first_name %></a> </p>